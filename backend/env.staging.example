# Staging Environment Configuration
# Copy this file to .env.staging and update with your staging values

# Database
DATABASE_URL=postgresql://staging_user:staging_password@staging-db:5432/celebrant_portal_staging

# Security
SECRET_KEY=staging-secret-key-change-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Environment
ENVIRONMENT=staging
DEBUG=true
HOST=0.0.0.0
PORT=8000

# CORS (staging frontend domain)
ALLOWED_ORIGINS=["https://staging.celebrant-portal.com", "http://localhost:3000"]

# CSRF Protection
CSRF_TOKEN_SECRET=staging-csrf-secret-key

# Logging
LOG_LEVEL=DEBUG

# Rate Limiting
RATE_LIMIT_CALLS=200
RATE_LIMIT_WINDOW=60

# Monitoring
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true

# Email (staging email service)
EMAIL_SERVICE_URL=https://staging-email-service.com
EMAIL_API_KEY=staging-email-api-key

# WebSocket
WEBSOCKET_ENABLED=true
WEBSOCKET_MAX_CONNECTIONS=100
