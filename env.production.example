# Production Environment Configuration for Melbourne Celebrant Portal
# Copy this to .env on your production server and update the values

# Application Settings
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=your-production-secret-key-here-change-this

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database_name

# CORS Configuration (update with your production domain)
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# JWT Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Email Configuration (optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@your-domain.com
SMTP_FROM_NAME=Melbourne Celebrant Portal

# File Upload Settings
UPLOAD_FOLDER=uploads
MAX_FILE_SIZE=10485760

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# Security
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=3600

# Database Pool Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30 